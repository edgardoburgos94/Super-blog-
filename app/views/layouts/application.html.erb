<!DOCTYPE html>
<html>
  <head>
    <title>SuperBlog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
      <a class="navbar-brand" href="/posts">Super blog</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <p>Bienvenido <%=current_user.email%></p>
            <li class="nav-item">
              <%= link_to " Cerrar sesión ", destroy_user_session_path, method: :delete, data: {confirm: "¿Estás seguro?"} %> 
            </li>

          <%else%>
            <li class="nav-item active">
              <%= link_to " Ingresar  ", new_user_session_path %>
            </li>

            <li class="nav-item">
              <%= link_to " Registrarse  ", new_user_registration_path %>
            </li>
          <%end%>
        </ul>
      </div>
      </div>
    </nav>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
